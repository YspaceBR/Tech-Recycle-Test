  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const navItems = document.querySelectorAll('.bottom-nav .nav-item');
      const pontoButtons = document.querySelectorAll('.button-pontos button');
      const currentPath = window.location.pathname;

      // Ativa a navegação com base na URL
      navItems.forEach((item) => {
        if (item.getAttribute('href') === currentPath) {
          item.classList.add('active');
        }

        item.addEventListener('click', () => {
          navItems.forEach((nav) => nav.classList.remove('active'));
          item.classList.add('active');
        });
      });

      // Evento para ativar os botões-pontos manualmente
      pontoButtons.forEach((btn) => {
        btn.addEventListener('click', () => {
          pontoButtons.forEach((b) => b.classList.remove('active'));
          btn.classList.add('active');
        });
      });
    });
  </script>
